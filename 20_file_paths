# this simple function can help you verify is path exist

import os

def path():
    name = os.path.exists('/home/darkode')
    if name:
        print('lol')
def size():
    size = os.path.getsize('/home/darkode/python/python_udemy/darko.py')
    print(size)

def list():
    list = os.listdir('/home/darkode/python/python_udemy/')
    print(list)

path()
size()
list()
